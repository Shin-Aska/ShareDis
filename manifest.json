{
    "name": "ShareDis",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Simple webpage sharing tool",
    "browser_specific_settings": {
      "gecko": {
        "strict_min_version": "109.0"
      },
      "gecko_android": {
        "strict_min_version": "120.0"
      }
    },
    "action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["functionality.js","background.js"]
    },
    "page_action": {
        "default_icon": "assets/svg.svg",
        "default_title": "Share this page",
        "show_matches": ["http://*/*", "https://*/*"]
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+X"
            }
        }
    },
    "permissions": ["tabs", "activeTab", "storage", "scripting", "clipboardWrite", "clipboardRead"],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "host_permissions": ["<all_urls>"]
}